{{!-- {{#each posts as |post| }}  --}}
<div class="card w-80 m-3">
  
  <div class="card-header">
    <a href="/post/{{post.id}}">
      <h5>{{title}}</h5>
    </a>

    <h6 class="card-subtitle mb-2 text-muted">Posted by {{post.user.name}} on {{date}}</h6>
  </div>
  
  <div class="card-body">
    {{this.body}}
  </div>

</div>
{{!-- {{/each}} --}}
